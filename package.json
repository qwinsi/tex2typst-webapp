{
  "name": "tex2typst-webapp",
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "make:katex": "cp node_modules/katex/dist/katex.min.css public/ && cp -r node_modules/katex/dist/fonts public/",
    "make:sw": "esbuild src/sw.js --bundle --outdir=public --minify-whitespace",
    "make:html": "node tools/make-cheat-sheet-html.js && node tools/make-impl-in-typst-html.js",
    "make": "npm run make:katex && npm run make:sw && npm run make:html",
    "dev": "vite dev",
    "build": "npm run make && vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "npx mocha"
  },
  "dependencies": {
    "@qwinsi/utilities-js": "^0.1.11",
    "butteruptoasts": "^2.0.1",
    "katex": "^0.16.21",
    "tex2typst": "^0.3.23"
  },
  "devDependencies": {
    "@qwinsi/mdc": "^0.1.5",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "esbuild": "^0.25.2",
    "gh-pages": "^6.1.1",
    "mocha": "^10.6.0",
    "squirrelly": "^9.1.0",
    "svelte": "^5.35.5",
    "tailwindcss": "^4.1.11",
    "toml": "^3.0.0",
    "vite": "^6.3.6"
  }
}
